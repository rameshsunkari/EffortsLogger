<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="EffortsLoggerJPA" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>java:/EffortsLoggerDS</jta-data-source>
		<class>com.efforts.model.Effortssubtype</class>
		<class>com.efforts.model.Effortstype</class>
		<class>com.efforts.model.EffortsInfo</class>
		<class>com.efforts.model.ManagerInfo</class>
		<class>com.efforts.model.ProjectInfo</class>
		<class>com.efforts.model.ProjectRoleInfo</class>
		<class>com.efforts.model.RolesInfo</class>
		<class>com.efforts.model.UserInfo</class>
		<properties>
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.target-server" value="JBoss"/>
		</properties>
	</persistence-unit>
</persistence>
